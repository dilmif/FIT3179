{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "title": "Happiness Score vs GDP Per Capita in 2023",
    "data": {
        "url": "https://raw.githubusercontent.com/dilmif/FIT3179/main/data/WHR_2023.csv"
    },
    "params": [
        {
            "name": "region_selection",
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Central and Eastern Europe",
                    "Commonwealth of Independent States",
                    "East Asia",
                    "Latin America and Caribbean",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "South Asia",
                    "Southeast Asia",
                    "Sub-Saharan Africa",
                    "Western Europe"
                ],
                "labels": [
                    "Show All",
                    "Central and Eastern Europe",
                    "Commonwealth of Independent States",
                    "East Asia",
                    "Latin America and Caribbean",
                    "Middle East and North Africa",
                    "North America and ANZ",
                    "South Asia",
                    "Southeast Asia",
                    "Sub-Saharan Africa",
                    "Western Europe"
                ],
                "name": "Region Selection: "
            }
        },
        {
            "name": "Population_Above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 100000000,
                "step": 1000000,
                "name": "Minimum Population: "
            }
        }
    ],
    "transform": [
        {
            "filter": "region_selection == null || datum.region == region_selection"
        },
        {
            "filter": "datum.Population > Population_Above"
        }
    ],
    "encoding": {
        "x": {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "title": "GDP Per Capita"
        },
        "y": {
            "field": "happiness_score",
            "type": "quantitative",
            "title": "Happiness Score"
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "size": {
                    "field": "Population",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            1000000,
                            10000000,
                            50000000,
                            100000000,
                            500000000
                        ],
                        "range": [
                            10,
                            50,
                            150,
                            200,
                            300,
                            400
                        ]
                    },
                    "legend": {
                        "format": ".1s"
                    }
                },
                "color": {
                    "field": "region",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Central and Eastern Europe",
                            "Commonwealth of Independent States",
                            "East Asia",
                            "Latin America and Caribbean",
                            "Middle East and North Africa",
                            "North America and ANZ",
                            "South Asia",
                            "Southeast Asia",
                            "Sub-Saharan Africa",
                            "Western Europe"
                        ],
                        "range": [
                            "#27B0BD",
                            "#ff7f00",
                            "#a6cee3",
                            "#cec7c4",
                            "#a65628",
                            "#377eb8",
                            "#ffbac0",
                            "#ba9d46",
                            "#e41a1c",
                            "#1C7C0E"
                        ]
                    },
                    "title": "Region"
                },
                "opacity": {
                    
                    "value": 0.6
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "happiness_score",
                        "type": "quantitative",
                        "format": ",",
                        "title": "Happiness Score"
                    },
                    {
                        "field": "gdp_per_capita",
                        "type": "quantitative",
                        "format": ",",
                        "title": "GDP Per Capita"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 11.5,
                "fontStyle": "italic"
                },
                "encoding": {
                "text": {"field": "Country", "type": "nominal"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum['Country'] == 'Australia' || datum['Country'] == 'China' || datum['Country'] == 'India' || datum['Country'] == 'Sri Lanka' || datum['Country'] == 'Spain' || datum['Country'] == 'Afghanistan' || datum['Country'] == 'Singapore'",
                        "value": 1
                        },
                        "value": 0
                        },
                        "tooltip": [
                            {
                                "field": "Country",
                                "type": "nominal"
                            },
                            {
                                "field": "happiness_score",
                                "type": "quantitative",
                                "format": ",",
                                "title": "Happiness Score"
                            },
                            {
                                "field": "gdp_per_capita",
                                "type": "quantitative",
                                "format": ",",
                                "title": "GDP Per Capita"
                            }
                        ]
                }

        }
    ]
}